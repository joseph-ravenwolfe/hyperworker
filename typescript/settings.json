{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(*)",
      "Edit",
      "Write",
      "NotebookEdit",
      "WebFetch",
      "WebSearch",
      "Read(*)",
      "LS(*)",
      "Grep(*)",
      "Search(*)",
      "Glob(*)",
      "mcp__atlassian",
      "mcp__Ref"
    ],
    "deny": [
      "Bash(NODE_ENV=production*)",
      "Bash(cat *.env*)",
      "Bash(cat *.envrc*)",
      "Bash(git push*)",
      "Bash(npm publish*)",
      "Bash(drop database*)",
      "Bash(DROP DATABASE*)"
    ]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENTS_TEAMS": "1",
    "CLAUDE_CODE_TASK_LIST_ID": "my-new-feature"
  },
  "enabledPlugins": {
    "github@claude-plugins-official": true,
    "atlassian@claude-plugins-official": true
  },
  "spinnerTipsEnabled": false,
  "bypassPermissions": true
}
